import datetime

def is_last_workday(date):
    # 获取给定日期的月份和年份
    month = date.month
    year = date.year
    
    # 确定该月份的最后一天是哪一天
    if month == 12:
        last_day_of_month = datetime.date(year, 12, 31)
    else:
        last_day_of_month = datetime.date(year, month + 1, 1) - datetime.timedelta(days=1)
    
    # 判断最后一天是否为工作日（星期一到星期五）
    if last_day_of_month.weekday() < 5:  # 0是星期一，4是星期五
        # 如果是工作日，则判断给定日期是否为最后一个工作日
        return date == last_day_of_month
    else:
        # 如果最后一天不是工作日，则向前找到最近的工作日
        # 这里假设工作日不考虑法定节假日等情况，实际应用中可能需要更复杂的逻辑
        while last_day_of_month.weekday() >= 5:  # 大于等于5表示周末
            last_day_of_month -= datetime.timedelta(days=1)
        
        # 最后一天如果是工作日，再判断是否为给定日期
        return date == last_day_of_month

# 测试代码
given_date = datetime.date(2024, 7, 5)  # 给定日期
print(is_last_workday(given_date))  # 判断是否为该月份的最后一个工作日
